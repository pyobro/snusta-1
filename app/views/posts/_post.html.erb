<div class="col-xs-12 col-sm-10 col-md-8 col-lg-8">
  <div class="card">
    <%=image_tag post.img_path, class: 'card-img-top', style:'width:100%;height:auto;'%>
    <div class="card-body">
      <h4 class="card-title"> <%= post.title %></h4>
      <p class="card-text"><%= post.content %></p>
      <p class="card-text"><small class="text-muted"><%= "#{time_ago_in_words(post.created_at)} ì „" %></small></p>
    </div>
  </div>
</div>